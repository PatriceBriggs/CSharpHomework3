<Window x:Class="HelloWorld.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="Sort by Column" Height="300" Width="300">
    <Grid>
        


        <ListView x:Name="uxList">

            <ListView.View>
                <GridView AllowsColumnReorder="true"
              ColumnHeaderToolTip="Password Information">

                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Name}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Name" Click="uxListColumnHeader_Click">Name</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Password}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Password" Click="uxListColumnHeader_Click">Password</GridViewColumnHeader>
                        </GridViewColumn.Header>


                    </GridViewColumn>

                </GridView>


            </ListView.View>
        </ListView>
    </Grid>
</Window>
